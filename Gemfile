source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'mysql2'


#Groupe pour les images, le javascript, ...
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'cucumber-rails', require: false
  gem 'rspec-rails'
end

group :test do
  gem 'database_cleaner'
end

#Gems pour tous les groupes.
gem 'devise'
gem 'haml'
gem 'jquery-rails'
gem 'localeapp'
gem 'newrelic_rpm'

